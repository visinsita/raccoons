<div class="row">
    <% @raccoons.each do |raccoon| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body sizer">
          <%  if raccoon.avatar_file_name %>
          <div class="raccoon-vatar card"><%= link_to (image_tag raccoon.avatar.url(:thumb)), raccoon, class: "img-responsive raccoon-time", remote: true %></a></div>
          <% end %>
          <div class="raccoon-deets">
          <h2 data-toggle="tooltip" title="<%= raccoon.name %>"><%= raccoon.name %></h2>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

